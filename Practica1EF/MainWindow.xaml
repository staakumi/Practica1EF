<Window x:Class="Practica1EF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica1EF"
        mc:Ignorable="d"
        Title="Хобби-магазин" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="EmployeesDgr" Visibility="Visible"/>
        <DataGrid x:Name="ProductsDgr" Visibility="Visible"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="1">
            <Button Content="Показать таблицу сотрудников" Click="ShowEmployees_Click"/>
            <Button Content="Показать таблицу товаров" Click="ShowProducts_Click"/>
        </StackPanel>

    </Grid>
</Window>
